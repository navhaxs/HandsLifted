<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:core="clr-namespace:HandsLiftedApp.Core;assembly=HandsLiftedApp.Core"
             x:Class="SongEditorStandalone.App"
             RequestedThemeVariant="Dark">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.DataTemplates>
        <core:ViewLocator />
    </Application.DataTemplates>
    <Application.Styles>
        <SimpleTheme />
        <avalonia:MaterialIconStyles />
        <StyleInclude Source="avares://HandsLiftedApp.XTransitioningContentControl/Styles.xaml" />
        <StyleInclude Source="avares://HandsLiftedApp.Controls/Styles/AppStyles.axaml" />
        <StyleInclude Source="avares://HandsLiftedApp.Controls/ScrollViewer.axaml" />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Simple/Simple.xaml" />
    </Application.Styles>
</Application>