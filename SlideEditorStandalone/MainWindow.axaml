<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:slideGroupEditor="clr-namespace:HandsLiftedApp.Core.Views.Editors.SlideGroupEditor;assembly=HandsLiftedApp.Core"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SlideEditorStandalone.MainWindow"
        Title="SlideEditorStandalone">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Click="LoadButton_OnClick">Load</Button>
            <Button Click="SaveButton_OnClick">Save</Button>
        </StackPanel>
        <slideGroupEditor:SlideGroupEditor />
    </DockPanel>
</Window>