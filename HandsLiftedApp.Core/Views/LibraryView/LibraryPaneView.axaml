<UserControl
    x:Class="HandsLiftedApp.Views.Library.LibraryPaneView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:viewModels="clr-namespace:HandsLiftedApp.Core.ViewModels"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:library="clr-namespace:HandsLiftedApp.Core.Views.LibraryView"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    d:DesignHeight="200"
    d:DesignWidth="600"
    x:DataType="viewModels:MainViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Styles>

    <!--  Wrapper  -->
    <DockPanel IsVisible="{Binding Converter={x:Static ObjectConverters.IsNotNull}}">

        <!--  Search box  -->
        <!-- <TextBox -->
        <!--     CornerRadius="99" -->
        <!--     MinWidth="400" -->
        <!--     MaxWidth="400" -->
