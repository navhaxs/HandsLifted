        <!--     Background="#35000000" -->
        <!--     BorderThickness="1" -->
        <!--     DockPanel.Dock="Top" -->
        <!--     FontSize="16" -->
        <!--     Text="{Binding LibraryViewModel.SearchTerm}" -->
        <!--     Watermark="Search songs and content..." /> -->

        <!--  3 Pane Splitter  -->
        <Grid ColumnDefinitions="200,1,*">

            <!--  Left box  -->
            <DockPanel Grid.Column="0">

                <Button DockPanel.Dock="Bottom" Command="{Binding LibraryViewModel.CreateNewSongCommand}">Add new song</Button>

                <ListBox Margin="0,0,0,0" BorderThickness="0"
                         ItemsSource="{Binding LibraryViewModel.Libraries}"
                         SelectedItem="{Binding LibraryViewModel.SelectedLibrary, Mode=OneWayToSource}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="ContextMenu">
                                <ContextMenu>
                                    <MenuItem Header="Open in Windows Explorer" Click="MenuItem_OnClick">
                                        <MenuItem.Icon>
                                            <avalonia:MaterialIcon Foreground="#888888" Kind="OpenInNew" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Setter>
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Label}" Padding="6 4" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <GridSplitter
                Grid.Column="1"
                Margin="-3,0"
                HorizontalAlignment="Stretch"
                Background="#808080"
                BorderBrush="Transparent"
                BorderThickness="3,0"
                ZIndex="9999" />

            <Grid Grid.Column="2">

                <library:LibraryQueryView DataContext="{Binding LibraryViewModel.ActiveQuery}" />

                <Button
                    Margin="20"
                    Padding="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding LibraryViewModel.OnAddSelectedToPlaylistCommand}"
                    Content="Add to playlist" />
            </Grid>

            <!-- -->
