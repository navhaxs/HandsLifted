<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:items="clr-namespace:HandsLiftedApp.Data.Models.Items;assembly=HandsLiftedApp.Data"
             xmlns:freeText="clr-namespace:HandsLiftedApp.Core.Views.Editors.FreeText"
             xmlns:converters="clr-namespace:HandsLiftedApp.Core.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="items:MediaGroupItem+SlideItem"
             x:Class="HandsLiftedApp.Core.Views.Editors.MediaGroupItemEditor.SlideItemEditor.SlideItemEditor">
    
    <UserControl.Resources>
        <converters:SlideToSlideDataConverter x:Key="SlideToSlideDataConverter" />
    </UserControl.Resources>

    <freeText:CustomSlideEditor DataContext="{Binding Converter={StaticResource SlideToSlideDataConverter}}" />
</UserControl>
