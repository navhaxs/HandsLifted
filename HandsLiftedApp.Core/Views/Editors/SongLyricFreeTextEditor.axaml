<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:editor="clr-namespace:HandsLiftedApp.Core.ViewModels.Editor"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="650"
             x:DataType="editor:SongEditorViewModel"
             Background="White"
             x:Class="HandsLiftedApp.Core.Views.Editors.SongLyricFreeTextEditor">
    <ScrollViewer>
        <DockPanel>
            <Button DockPanel.Dock="Top" Click="SyncButton_OnClick">Sync</Button>
            <TextBox
                CornerRadius="0"
                AcceptsReturn="True"
                VerticalAlignment="Stretch"
                Background="White"
                FontFamily="Consolas"
                Foreground="Black"
                BorderThickness="0"
                Padding="12"
                TextWrapping="Wrap"
                Watermark="Enter or paste lyrics text here..."
                Text="{Binding FreeTextEntryField}" />
        </DockPanel>
    </ScrollViewer>
</UserControl>