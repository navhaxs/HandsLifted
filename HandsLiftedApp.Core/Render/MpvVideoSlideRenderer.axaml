<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:libmpv="using:Avalonia.Controls.LibMpv"
             xmlns:app="clr-namespace:HandsLiftedApp.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Background="Black"
             x:Class="HandsLiftedApp.Core.Render.MpvVideoSlideRenderer">
    <libmpv:SoftwareVideoView x:Name="VideoView" ShowFps="{Binding Source={x:Static app:Globals.Instance}, Path=AppPreferences.EnableDebugStats}"
                              RenderOptions.BitmapInterpolationMode="HighQuality"
                              UseLayoutRounding="True">
        <libmpv:SoftwareVideoView.RenderTransform>
            <ScaleTransform/>
        </libmpv:SoftwareVideoView.RenderTransform>
    </libmpv:SoftwareVideoView>
    
    <!-- Not working in ProjectorWindow, only preview in MainWindow ?? -->
    <!-- <libmpv:OpenGlVideoView x:Name="VideoView" /> -->
</UserControl>