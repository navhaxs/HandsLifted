<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="540"
        x:Class="HandsLiftedApp.Views.Preferences.PreferencesWindow"
		xmlns:material="using:Material.Icons.Avalonia"
		Height="540"
		Width="980"
		Background="#eeeef2"
        Title="StartWindow">
	<DockPanel>
		<Border DockPanel.Dock="Top" BorderThickness="0 0 0 1" BorderBrush="#aba5d5" Background="#edeafc">
			<DockPanel>
				<Button DockPanel.Dock="Right" BorderBrush="#aba5d5" BorderThickness="1 1 1 0" CornerRadius="5 5 0 0" MinWidth="80" Margin="0 0 8 0" VerticalAlignment="Bottom" Padding="24 14" Background="White">
					<DockPanel>
						<material:MaterialIcon DockPanel.Dock="Left" Kind="PlusCircleOutline" Foreground="#888888" Margin="-4 -4 -4 -4" VerticalAlignment="Center" Width="24" Height="24" />
						<TextBlock Text="Add item" Margin="12 0 0 0" FontSize="14" />
					</DockPanel>
				</Button>
				<TextBlock Text="Show Designer / Stage Display Designer / Layouts" Padding="16 20" VerticalAlignment="Center" FontSize="16" />
			</DockPanel>
		</Border>
		<Grid />
	</DockPanel>
</Window>
