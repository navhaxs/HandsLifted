<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:HandsLiftedApp.ViewModels"
			 Background="#e8e8ec" 
             x:Class="HandsLiftedApp.Views.App.Controls.PlaylistTitleDateEditor">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Border BorderBrush="#b0abd7" BorderThickness="1" CornerRadius="6">
		<StackPanel Margin="8">
			<TextBox Watermark="Playlist Title" FontSize="22" Text="{Binding Playlist.Meta[Title]}" />
			<DatePicker SelectedDate="{Binding Playlist.Meta[Date]}" />
		</StackPanel>
	</Border>
</UserControl>
