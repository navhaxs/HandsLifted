<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="150"
             x:Class="HandsLiftedApp.Views.Item.PowerPointInfo">
	<Border Background="#f1f1f7" CornerRadius="5" Padding="5">
		<StackPanel HorizontalAlignment="Left">
			<StackPanel>
				<TextBlock Text="PowerPoint Presentation" />
				<DockPanel>
					<Button DockPanel.Dock="Right" Content="..." />
					<TextBlock Text="C:\VisionScreens\TestPresentations\Matthew 11 Sermon.pptx" TextDecorations="Underline" Foreground="Blue" />
				</DockPanel>
			</StackPanel>
			<TextBlock Text="Last sync: 4:44am Today ('Sunday Post-roll', 8 Slides)" />
			<Button Content="Edit in PowerPoint" HorizontalAlignment="Left" Command="{Binding SyncState.EditInExternalCommand}" />
			<ProgressBar Value="{Binding SyncState.Progress}" Maximum="100" />
			<Button Content="Sync now" HorizontalAlignment="Left" Command="{Binding SyncState.SyncCommand}" />
		</StackPanel>
	</Border>
</UserControl>
