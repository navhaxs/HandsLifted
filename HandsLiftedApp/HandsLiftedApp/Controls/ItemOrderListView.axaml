<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="using:HandsLiftedApp.Converters"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="450"
			 xmlns:vm="using:HandsLiftedApp.ViewModels"
             x:Class="HandsLiftedApp.Controls.ItemOrderListView">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<UserControl.Resources>
		<converters:ItemToIndexConverter x:Key="itemToIndexConverter"/>
	</UserControl.Resources>

	<ListBox
		x:Name="itemsListBox"
		Items="{Binding Playlist.Items}"
		Background="Transparent">
		<ListBox.ContextMenu>
			<ContextMenu>
				<MenuItem Header="Add Item" />
			</ContextMenu>
		</ListBox.ContextMenu>
		<ListBox.Styles>
			<Style Selector="ListBoxItem">
				<Setter Property="ContextMenu">
					<Setter.Value>
						<ContextMenu>
							<MenuItem Header="Move Up" Command="{Binding $parent[Window].DataContext.MoveUpItemCommand}" CommandParameter="{Binding}"/>
							<MenuItem Header="Move Down" Command="{Binding $parent[Window].DataContext.MoveDownItemCommand}" CommandParameter="{Binding}"/>
							<MenuItem Header="Remove Item" Command="{Binding $parent[Window].DataContext.RemoveItemCommand}" CommandParameter="{Binding}"/>
						</ContextMenu>
					</Setter.Value>
				</Setter>
			</Style>

			<Style Selector="ListBoxItem">
				<Setter Property="Margin" Value="4 0 0 0"/>
				<Setter Property="BorderThickness" Value="1 1 0 1"/>
				<Setter Property="CornerRadius" Value="3 0 0 3"/>
			</Style>

			<Style Selector="ListBoxItem:selected /template/ ContentPresenter">
				<Setter Property="Background" Value="#edeafc"/>
				<Setter Property="BorderBrush" Value="#9a93cd"/>
			</Style>
		</ListBox.Styles>
		<ListBox.DataTemplates>
			<DataTemplate>
				<DockPanel>
					<Ellipse
						DockPanel.Dock="Right"
						IsVisible="{Binding State.IsSelected, FallbackValue=False}"
						Width="8"
						Height="8"
						Fill="#c43e1c"
						/>
					<TextBlock TextTrimming="CharacterEllipsis">
						<TextBlock.Text>
							<!--<MultiBinding StringFormat="{}{0}. {1}">
								<Binding RelativeSource="{RelativeSource AncestorType={x:Type ListBoxItem}}" Converter="{StaticResource itemToIndexConverter}" />-->
								<Binding Path="Title" />
							<!--</MultiBinding>-->
						</TextBlock.Text>
				</TextBlock>
				</DockPanel>
			</DataTemplate>
		</ListBox.DataTemplates>
	</ListBox>
</UserControl>
