<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="80"
	         xmlns:vme="using:HandsLiftedApp.ViewModels.Editor"
			 xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
			 xmlns:iac="clr-namespace:Avalonia.Xaml.Interactions.Custom;assembly=Avalonia.Xaml.Interactions"
             x:Class="HandsLiftedApp.Controls.SongArrangementControl">

	<Design.DataContext>
		<vme:SongEditorViewModel />
	</Design.DataContext>

	<WrapPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="4 4">
		<ItemsControl Items="{Binding song.Arrangement}" MinHeight="20">

		</ItemsControl>
		<Border Background="#EDF6FF" BorderBrush="#257BC6" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Title</TextBlock>
		</Border>
		<Border Background="#edeafc" BorderBrush="#9a93cd" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Verse 1</TextBlock>
		</Border>
		<Border Background="#FFFDED" BorderBrush="#D3BE1D" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Chorus</TextBlock>
		</Border>
		<Border Background="#edeafc" BorderBrush="#9a93cd" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Verse 2</TextBlock>
		</Border>
		<Border Background="#FFFDED" BorderBrush="#D3BE1D" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Chorus</TextBlock>
		</Border>
		<Border Background="#edeafc" BorderBrush="#9a93cd" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Verse 3</TextBlock>
		</Border>
		<Border Background="#FFFDED" BorderBrush="#D3BE1D" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Chorus</TextBlock>
		</Border>
		<Border Background="#f4f4f4" BorderBrush="#7F7F7F" BorderThickness="1" CornerRadius="12" Padding="6 2">
			<i:Interaction.Behaviors>
				<iac:DragControlBehavior />
			</i:Interaction.Behaviors>
			<TextBlock>Blank</TextBlock>
		</Border>
	</WrapPanel>
</UserControl>
