<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:controls="using:HandsLiftedApp.Controls"
             xmlns:utils="using:HandsLiftedApp.Utils"
             x:Class="HandsLiftedApp.Controls.PlaylistStateView">

	<ListBox Name="List"
			 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
			 ScrollViewer.VerticalScrollBarVisibility="Disabled"
			 Items="{Binding ItemStates}"
			 SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
			 SelectedItem="{Binding SelectedItem}">
		<ListBox.ItemsPanel>
			<ItemsPanelTemplate>
				<StackPanel />
			</ItemsPanelTemplate>
		</ListBox.ItemsPanel>
		<ListBox.ItemTemplate>
			<DataTemplate>
				<Border Background="#f2f2f2" CornerRadius="4" Padding="4" HorizontalAlignment="Stretch" BorderBrush="#eeeee2" BorderThickness="2">
					<StackPanel>
						<Label Padding="10 20" Content="{Binding Item.Title, FallbackValue=Item}" FontWeight="SemiBold" FontSize="24" />
						<controls:ItemStateView />
					</StackPanel>
				</Border>
			</DataTemplate>
		</ListBox.ItemTemplate>
