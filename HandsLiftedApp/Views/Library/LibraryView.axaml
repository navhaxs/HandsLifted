<UserControl
    x:Class="HandsLiftedApp.Views.Library.LibraryView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlmodules="using:HandsLiftedApp.Views.ControlModules"
    xmlns:controls="using:HandsLiftedApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataSlides="using:HandsLiftedApp.Data.Slides"
    xmlns:editor="using:HandsLiftedApp.Views.Editor"
    xmlns:ext="using:HandsLiftedApp.Extensions"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:render="using:HandsLiftedApp.Views.Render"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:utils="using:HandsLiftedApp.Utils"
    xmlns:viewsrender="using:HandsLiftedApp.Views.Render"
    xmlns:vm="using:HandsLiftedApp.ViewModels"
	xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    d:DesignHeight="350"
    d:DesignWidth="1100"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <!--<UserControl.Resources>
		<pc:ThirdComponentConverter x:Key="ThirdComponent" />
	</UserControl.Resources>-->

    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Styles>

    <!--  Wrapper  -->
    <DockPanel>

        <!--  Search box  -->
        <TextBox
            MinWidth="400"
            MaxWidth="400"
            Padding="8,4,8,4"
            HorizontalAlignment="Left"
            Background="#35000000"
            BorderThickness="1"
            DockPanel.Dock="Top"
            FontSize="16"
            Text="{Binding Library.SearchTerm}"
            Watermark="Search songs and content..." />

        <!--  3 Pane Splitter  -->
        <Grid ColumnDefinitions="*,1,2*,1,2*">

            <!--  Left box  -->
            <ListBox Grid.Column="0" Margin="0,0,0,0" BorderThickness="0">
                <ListBoxItem IsSelected="True">Songs</ListBoxItem>
                <ListBoxItem>Media</ListBoxItem>
                <ListBoxItem>Presentations</ListBoxItem>
                <ListBoxItem>Countdowns</ListBoxItem>
                <ListBoxItem>Section Graphics &amp; Logos</ListBoxItem>
            </ListBox>

			<GridSplitter
				Grid.Column="1"
				Margin="-3,0"
				HorizontalAlignment="Stretch"
				Background="#808080"
				BorderBrush="Transparent"
				BorderThickness="3,0"
				ZIndex="9999" />

			<!--  Centre box  -->
            <Grid Grid.Column="2">

                <DockPanel>
                    <ListBox
                        Background="Transparent"
                        ItemsSource="{Binding Library.SearchResults}"
                        SelectedItem="{Binding Library.SelectedItem}"
						HorizontalAlignment="Stretch"
						BorderThickness="0" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
					<i:Interaction.Behaviors>
						<!--TODO create separate 'selectors' for status messages -->
						<!--<ia:DataTriggerBehavior Binding="{Binding Library.SearchResults.Size}"
												ComparisonCondition="Equal"
												Value="0">
							<ia:ChangePropertyAction TargetObject="NoItemsLabel"
													 PropertyName="IsVisible"
													 Value="True" />
						</ia:DataTriggerBehavior>-->
					</i:Interaction.Behaviors>
					<TextBlock Name="NoItemsLabel" Text="No items" IsVisible="False" />
					<!--<TextBlock Name="NoResultsLabel" Text="No results" />-->
                </DockPanel>

                <DockPanel Grid.Column="1" />
            </Grid>

			<GridSplitter
				Grid.Column="3"
				Margin="-3,0"
				HorizontalAlignment="Stretch"
				Background="#808080"
				BorderBrush="Transparent"
				BorderThickness="3,0"
				ZIndex="9999" />

			<!--  Right box  -->
            <Grid Grid.Column="4" Margin="8 0">
				<ScrollViewer>
                    <TextBlock Text="{Binding Path=Library.SelectedItemPreview, FallbackValue='preview content goes here'}" />
				</ScrollViewer>
                <Button
                    Margin="20"
                    Padding="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding Library.OnAddSelectedToPlaylistCommand}"
                    Content="Add to playlist" />
            </Grid>

        </Grid>

    </DockPanel>
    <!--  /Wrapper  -->

</UserControl>
