<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 	 		 xmlns:material="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="660" d:DesignHeight="400"
             x:Class="HandsLiftedApp.Views.AddItemPaletteControl">
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="HorizontalContentAlignment" Value="Stretch" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Background" Value="White" />
			<Setter Property="CornerRadius" Value="6" />
		</Style>
		<Style Selector="Button DockPanel">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="Margin" Value="5" />
		</Style>
		<Style Selector="Button TextBlock">
			<Setter Property="FontSize" Value="14" />
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="TextWrapping" Value="Wrap" />
		</Style>
		<Style Selector="Button material|MaterialIcon">
			<Setter Property="Foreground" Value="#888888" />
			<Setter Property="Height" Value="24" />
			<Setter Property="Width" Value="24" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="HorizontalAlignment" Value="Center" />
		</Style>

		<Style Selector="Button">
			<Setter Property="Margin" Value="6" />
		</Style>
	</UserControl.Styles>
	<Border BorderBrush="#9a93cd" BorderThickness="1" CornerRadius="6" Background="White">

		<DockPanel>

			<Grid Background="#6033ab" DockPanel.Dock="Top">
				<TextBlock
					Foreground="White"
					Margin="14 14"
					FontSize="18">Add item to service</TextBlock>
			</Grid>
			
			<!--<ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">-->
				
				<!--<Label DockPanel.Dock="Bottom">Ctrl + Click to append to selected item? Default - end of playlist</Label>-->
				<TextBox Watermark="Search songs and media..." DockPanel.Dock="Top"
						 FontSize="16"
						 Margin="8 12 8 3"
						 />
				<UniformGrid Rows="3" Columns="3" Margin="8">
					<Button Command="{Binding AddSongCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Music"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Song" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddVideoCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Video"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Video" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddPresentationCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Presentation"
												   DockPanel.Dock="Top" />
							<TextBlock Text="PowerPoint" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddGoogleSlidesCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Slideshow"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Google Slides" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddGroupCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Archive"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Media Group" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddGraphicCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Image"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Graphic" />
						</DockPanel>
					</Button>
					<Button Command="{Binding AddLogoCommand}">
						<DockPanel>
							<material:MaterialIcon Kind="Star"
												   DockPanel.Dock="Top" />
							<TextBlock Text="Logo" />
						</DockPanel>
					</Button>
					<!--<Button Command="{Binding AddCountdownCommand}">
					Countdown
				</Button>-->
					<Button Command="{Binding AddTestEmptyGroupCommand}">
						Test Blank Group
					</Button>
					<Button Command="{Binding AddCustomSlideCommand}">
						Test Custom Group
					</Button>
				</UniformGrid>

			<!--</ScrollViewer>-->
		</DockPanel>
	</Border>
</UserControl>
